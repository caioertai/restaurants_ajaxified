<h1><%= @restaurant.name %></h1>
<%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=15&size=400x300&sensor=false&maptype=roadmap&markers=color:red|#{@restaurant.address}&key=AIzaSyC76Ry3oR7r5OrMCIzV_GjLgg6AUp_nqwI" %>
<h2>
  <%= pluralize @restaurant.reviews.count, "review" %>
</h2>

<%= simple_form_for [@restaurant, @review] do |f| %>

<% end %>

<div id="reviews">
  <% if @restaurant.reviews.blank? %>
    Be the first to leave a review for <%= @restaurant.name %>
  <% else %>
    <% @restaurant.reviews.each do |review| %>
      <%= render 'reviews/show', review: review %>
    <% end %>
  <% end %>
</div>
